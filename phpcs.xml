<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for PRS2.</description>
    <file>./lib</file>
    <file>./framework</file>
    <file>./public/index.php</file>
    <rule ref="PSR2"/>
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <severity>0</severity>
    </rule>
</ruleset>
